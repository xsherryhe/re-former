<%= form_with model: user do |form| %>
  <div>
    <%= form.label :username, 'New username:' %>
    <%= form.text_field :username, value: 'user123' %>
    <% user.errors.full_messages_for(:username).each do |message| %>
      <div class="error_message"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :email, 'New user email:' %>
    <%= form.text_field :email, placeholder: 'example@example.com', size: 30 %>
    <% user.errors.full_messages_for(:email).each do |message| %>
      <div class="error_message"><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :password, 'New user password:' %>
    <%= form.password_field :password %>
    <% user.errors.full_messages_for(:password).each do |message| %>
      <div class="error_message"><%= message %></div>
    <% end %>
  </div>
  <%= form.submit 'Submit' %>
<% end %>
